<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="300021" id="com.ltc.imapapp" ios-CFBundleVersion="202005091051" version="3.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>iMapApp</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
    <platform name="android">
        <splash density="land-hdpi" src="res/drawable-hdpi/splash-land-hdpi.png" />
        <splash density="land-ldpi" src="res/drawable-ldpi/splash-land-ldpi.png" />
        <splash density="land-mdpi" src="res/drawable-mdpi/splash-land-mdpi.png" />
        <splash density="land-xhdpi" src="res/drawable-xhdpi/splash-land-xhdpi.png" />
        <splash density="land-xxhdpi" src="res/drawable-xxhdpi/splash-land-xxhdpi.png" />
        <splash density="land-xxxhdpi" src="res/drawable-xxxhdpi/splash-land-xxxhdpi.png" />
        <splash density="port-hdpi" src="res/drawable-hdpi/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/drawable-ldpi/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/drawable-mdpi/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/drawable-xhdpi/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/drawable-xxhdpi/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/drawable-xxxhdpi/splash-port-xxxhdpi.png" />
    </platform>
    <preference name="SplashMaintainAspectRatio" value="false" />
    <icon src="res/drawable/icon.png" />
    <icon density="ldpi" src="res/drawable-ldpi/icon.png" />
    <icon density="mdpi" src="res/drawable-mdpi/icon.png" />
    <icon density="hdpi" src="res/drawable-hdpi/icon.png" />
    <icon density="xhdpi" src="res/drawable-xhdpi/icon.png" />
    <platform name="ios">
        <icon height="180" src="res/iphone/appicon-60@3x.png" width="180" />
        <icon height="60" src="res/iphone/appicon-60.png" width="60" />
        <icon height="120" src="res/iphone/appicon-60@2x.png" width="120" />
        <icon height="76" src="res/iphone/appicon-76.png" width="76" />
        <icon height="152" src="res/iphone/appicon-76@2x.png" width="152" />
        <icon height="40" src="res/iphone/appicon-40.png" width="40" />
        <icon height="80" src="res/iphone/appicon-40@2x.png" width="80" />
        <icon height="57" src="res/iphone/appicon.png" width="57" />
        <icon height="114" src="res/iphone/appicon@2x.png" width="114" />
        <icon height="72" src="res/iphone/appicon-72.png" width="72" />
        <icon height="144" src="res/iphone/appicon-72@2x.png" width="144" />
        <icon height="29" src="res/iphone/appicon-small.png" width="29" />
        <icon height="58" src="res/iphone/appicon-small@2x.png" width="58" />
        <icon height="50" src="res/iphone/appicon-50.png" width="50" />
        <icon height="100" src="res/iphone/appicon-50@2x.png" width="100" />
        <icon height="167" src="res/iphone/appicon-167.png" width="167" />
        <icon height="167" src="res/iphone/appicon-83.5@2x.png" width="167" />
        <icon height="1024" src="res/iphone/appicon-1024.png" width="1024" />
        <splash src="res/screen/ios/Default@2x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~iphone~comcom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anyany.png" />
        <splash src="res/screen/ios/Default@3x~iphone~anycom.png" />
        <splash src="res/screen/ios/Default@3x~iphone~comany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~anyany.png" />
        <splash src="res/screen/ios/Default@2x~ipad~comany.png" />
        <preference name="Orientation" value="all" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="StatusBarOverlaysWebView" value="true" />
        <preference name="StatusBarBackgroundColor" value="#000000" />
        <preference name="StatusBarStyle" value="lightcontent" />
        <custom-config-file parent="NSPhotoLibraryAddUsageDescription" platform="ios" target="*-Info.plist">
            <string>Save original photos captured in the iMapInvasives app to your device.</string>
        </custom-config-file>
        <custom-config-file parent="NSLocationAlwaysUsageDescription" platform="ios" target="*-Info.plist">
            <string>iMapInvasives needs to know your location to determine where the species is located.</string>
        </custom-config-file>
        <custom-config-file parent="NSLocationAlwaysAndWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
            <string>iMapInvasives needs to know your location to determine where the species is located.</string>
        </custom-config-file>
    </platform>
    <plugin name="cordova-plugin-device-orientation" spec="~1.0.7" />
    <edit-config file="*-Info.plist" mode="merge" target="NSCameraUsageDescription">
        <string>iMapInvasives needs access to camera to capture species images.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>iMapInvasives needs to know your location to determine where the species is located.</string>
    </edit-config>
    <edit-config file="*-Info.plist" mode="merge" target="NSPhotoLibraryUsageDescription">
        <string>iMapInvasives needs to access the device's camera library to retrieve previously-captured species images and to save original photos captured in the iMapInvasives app.</string>
    </edit-config>
</widget>
